{
    "metadata": {
        "serviceAbbreviation": "EC2"
    },
    "shapes": {
        "AttachmentStatus": {
            "enum":[
                "available",
                "attaching",
                "attached",
                "detaching",
                "detached",
                "busy"
            ]
        },
        "VolumeAttachmentState": {
            "enum":[
                "attaching",
                "attached",
                "detaching",
                "detached",
                "busy"
            ]
        }
    },
    "waiters": {
        "ImageAvailable": {
            "operation": "DescribeImages",
            "maxAttempts": 40,
            "delay": 15,
            "acceptors": [
                {
                    "state": "success",
                    "matcher": "pathAll",
                    "argument": "Images[].State",
                    "expected": "available"
                },
                {
                    "state": "failure",
                    "matcher": "pathAny",
                    "argument": "Images[].State",
                    "expected": "deregistered"
                }
            ]
        },
        "InstanceExists": {
            "delay": 5,
            "maxAttempts": 40,
            "operation": "DescribeInstances",
            "acceptors": [
                {
                    "matcher": "status",
                    "expected": 200,
                    "state": "success"
                },
                {
                    "matcher": "error",
                    "expected": "InvalidInstanceIDNotFound",
                    "state": "retry"
                }
            ]
        }
    }
}
