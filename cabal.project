-- Writing environment files prevents reproducible builds.
write-ghc-environment-files: never

-- O1 by default. You can override this locally via:
--   cabal configure --disable-optimization
optimization: 1

-- Local packages.
packages:
   examples/
   lib/amazonka/
   lib/amazonka-core/
   lib/amazonka-test/
   lib/amazonka-s3-encryption/
   lib/botocore/

optional-packages:
   gen/
   lib/services/*/

allow-newer:
   barbies-th:base, barbies-th:template-haskell
