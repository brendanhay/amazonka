    "-XNoImplicitPrelude",
    "-XBinaryLiterals",
    "-XConstraintKinds",
    "-XDataKinds",
    "-XDefaultSignatures",
    "-XDeriveFoldable",
    "-XDeriveFunctor",
    "-XDeriveGeneric",
    "-XDeriveTraversable",
    "-XDerivingStrategies",
    "-XDerivingVia",
    "-XDoAndIfThenElse",
    "-XDuplicateRecordFields",
    "-XEmptyDataDecls",
    "-XExistentialQuantification",
    "-XExplicitNamespaces",
    "-XFlexibleContexts",
    "-XFlexibleInstances",
    "-XFunctionalDependencies",
    "-XGADTs",
    "-XGeneralizedNewtypeDeriving",
    "-XInstanceSigs",
    "-XKindSignatures",
    "-XLambdaCase",
    "-XMultiParamTypeClasses",
    "-XMultiWayIf",
    "-XNamedFieldPuns",
    "-XNumericUnderscores",
